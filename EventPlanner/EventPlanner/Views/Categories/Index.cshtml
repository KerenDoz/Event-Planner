@model IEnumerable<EventPlanner.Data.Models.Category>
@{
    ViewData["Title"] = "Categories";
}

<h1>Categories</h1>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (User.Identity?.IsAuthenticated == true)
{
    <a class="btn btn-success mb-3" asp-action="Create">Create Category</a>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var c in Model)
    {
        <tr>
            <td>@c.Name</td>
            <td class="text-end">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@c.Id">Edit</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@c.Id">Delete</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
