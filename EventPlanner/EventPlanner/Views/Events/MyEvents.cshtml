@model EventPlanner.Models.Events.EventIndexQueryModel
@{
    ViewData["Title"] = "My Events";
}

<h1>My Events</h1>

<a class="btn btn-success mb-3" asp-action="Create">Create Event</a>

@if (!Model.Events.Any())
{
    <div class="alert alert-info">You havenâ€™t created any events yet.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Start</th>
                <th>Category</th>
                <th>City</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var e in Model.Events)
        {
            <tr>
                <td>@e.Title</td>
                <td>@e.StartDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@e.CategoryName</td>
                <td>@e.City</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@e.Id">Details</a>
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@e.Id">Edit</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@e.Id">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}