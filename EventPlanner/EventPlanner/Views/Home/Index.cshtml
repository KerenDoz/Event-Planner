@{
    ViewData["Title"] = "Home";
}

<div class="text-center mb-4">
    <h1 class="display-5">EventPlanner</h1>
    <p class="lead text-muted">
        Create, manage and explore events easily.
    </p>
</div>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">

    <!-- Events -->
    <div class="col">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title">Events</h5>
                <p class="card-text">
                    Browse all public upcoming events.
                </p>
                <a asp-controller="Events" asp-action="Index"
                   class="btn btn-primary w-100">
                    View Events
                </a>
            </div>
        </div>
    </div>

    <!-- My Events -->
    <div class="col">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title">My Events</h5>
                <p class="card-text">
                    Manage the events you have created.
                </p>

                @if (User.Identity?.IsAuthenticated == true)
                {
                    <a asp-controller="Events" asp-action="MyEvents"
                       class="btn btn-success w-100">
                        My Events
                    </a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login"       class="btn btn-outline-success w-100">
                        Login to view
                    </a>
                }
            </div>
        </div>
    </div>

    <!-- Locations -->
    <div class="col">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title">Locations</h5>
                <p class="card-text">
                    View and manage event locations.
                </p>
                <a asp-controller="Locations" asp-action="Index"
                   class="btn btn-secondary w-100">
                    Locations
                </a>
            </div>
        </div>
    </div>

    <!-- Categories -->
    <div class="col">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title">Categories</h5>
                <p class="card-text">
                    Manage event types and categories.
                </p>
                <a asp-controller="Categories" asp-action="Index"
                   class="btn btn-dark w-100">
                    Categories
                </a>
            </div>
        </div>
    </div>

</div>


