@model EventPlanner.Models.Account.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<form method="post">
    <div class="mb-3">
        <label class="form-label" asp-for="UsernameOrEmail"></label>
        <input class="form-control" asp-for="UsernameOrEmail" autocomplete="username" />
        <span class="text-danger" asp-validation-for="UsernameOrEmail"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="Password"></label>
        <input class="form-control" asp-for="Password" autocomplete="current-password" />
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" asp-for="RememberMe" />
        <label class="form-check-label" asp-for="RememberMe"></label>
    </div>

    <button class="btn btn-primary" type="submit">Login</button>
    <a class="btn btn-secondary" asp-action="Register">Register</a>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
